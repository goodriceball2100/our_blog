- @posts.each do |post| 
  .content
    .content__left
      .content__left--image
    .content__right
      .content__right--top
        = link_to post.title, post_path(post.id), class: "content__right__top--title"
      .content__right__bottom
        = post.user.nickname
        .content__right__bottom--date
          = post.created_at